# One Barn AI - Environment Configuration Template
# Copy this file to .env.local and configure your values
# IMPORTANT: Never commit actual credentials to version control

# ============================================================================
# PRODUCTION CONFIGURATION
# ============================================================================

# Production Mode (set to 'true' for production, 'false' for development)
VITE_PRODUCTION_MODE=true

# Production API Configuration
VITE_AUTH_API_URL=https://your-onevault-api.com
VITE_API_BASE_URL=https://your-onevault-api.com
VITE_PLATFORM_API_KEY=your-secure-platform-api-key
VITE_API_TOKEN=your-secure-platform-api-key
VITE_TENANT_ID=your-tenant-id
VITE_CUSTOMER_ID=your-tenant-id
VITE_TENANT_HK=your-tenant-hash-key

# Timeout Configuration (in milliseconds)
VITE_PRODUCTION_TIMEOUT=30000
VITE_DEMO_MODE_TIMEOUT=30000

# ============================================================================
# DEMO CONFIGURATION
# ============================================================================

# Demo Mode (set to 'true' to enable demo mode)
VITE_DEMO_MODE=false

# Demo Fallback (set to 'true' to allow demo fallback if production fails)
VITE_ENABLE_DEMO_FALLBACK=true

# ============================================================================
# CAMERA CONFIGURATION
# ============================================================================

# Wyze Camera Credentials (replace with your actual credentials)
VITE_WYZE_USERNAME=your-wyze-username
VITE_WYZE_PASSWORD=your-wyze-password

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Session Configuration
VITE_SESSION_TIMEOUT=28800000
VITE_TOKEN_EXPIRY=1800000

# Security Features
VITE_REQUIRE_TWO_FACTOR=false
VITE_LOG_SENSITIVE_DATA=false

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Development Mode Settings
VITE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# ============================================================================
# IMPORTANT SECURITY NOTES
# ============================================================================

# 1. Never commit this file with actual credentials
# 2. Use different credentials for development, staging, and production
# 3. Regularly rotate API keys and passwords
